<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/dimen_11sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FadeInPopWin">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--    <style name="SlyCalendarDialogStyle" parent="Base.Theme.AppCompat.Dialog">-->
    <!--        <item name="android:windowFixedHeightMinor">50%</item>-->
    <!--        <item name="android:windowFixedHeightMajor">70%</item>-->
    <!--    </style>-->


    <style name="SlyCalendarTimeDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/slycalendar_defHeaderColor</item>
        <item name="colorControlNormal">@color/slycalendar_defHeaderColor</item>
    </style>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_btn_radio</item>
    </style>

    <style name="MySwitch" parent="AppTheme">
        <item name="android:colorAccent">@color/colorThemeGreen</item>
    </style>


    <!-- Btn background-->

    <style name="QueDrop.Button.DarkBlue">
        <item name="android:background">@drawable/button_dark_blue</item>
    </style>

    <style name="QueDrop.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_42sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>

        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
