<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:orientation="horizontal">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchDays"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvDays"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/monday" />

    <EditText
        android:id="@+id/etClosed"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="8dp"
        android:layout_weight="2.22"
        android:background="@drawable/view_rounded_search_image"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:inputType="none"
        android:singleLine="true"
        android:text="@string/closed"
        android:textColor="@color/colorDarkGrey1"
        android:textSize="@dimen/_13ssp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etOpenTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/view_rounded_search_image"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:inputType="none"
        android:padding="@dimen/_10sdp"
        android:singleLine="true"
        android:textColor="@color/colorDarkGrey1"
        android:textSize="@dimen/_13ssp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/etCloseTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@drawable/view_rounded_search_image"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:inputType="none"
        android:padding="@dimen/_10sdp"
        android:singleLine="true"
        android:textColor="@color/colorDarkGrey1"
        android:textSize="@dimen/_13ssp"
        android:visibility="visible" />

</LinearLayout>