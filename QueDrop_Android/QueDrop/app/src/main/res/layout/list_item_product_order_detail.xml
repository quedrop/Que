<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainRelative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_7dp"
    android:background="@drawable/view_rounded"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dimen_15dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgProduct"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_product_supplier"
        app:layout_constraintDimensionRatio="10:5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="10dp" />

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:singleLine="true"
        android:text="title"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_xxxm"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgProduct"
        app:layout_constraintStart_toStartOf="@id/imgProduct"
        android:layout_margin="@dimen/dimen_15dp"
        app:layout_constraintEnd_toStartOf="@id/tvQty"/>

    <TextView
        android:id="@+id/tvQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_xxxm"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgProduct"
        app:layout_constraintEnd_toEndOf="@id/imgProduct"
        android:layout_margin="@dimen/dimen_15dp"
        android:background="@drawable/view_rounded_transperent"
        android:padding="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
