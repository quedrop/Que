<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_rounded_dialog">

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15dp"
        android:padding="@dimen/dimen_10dp"
        android:src="@drawable/addstore" />

    <EditText
        android:id="@+id/editCategory"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_below="@id/dialog_image"
        android:layout_margin="@dimen/dimen_15dp"
        android:background="@drawable/view_rounded_search_image"
        android:hint="Enter category name"
        android:inputType="text"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_2dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_2dp"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_xxxm" />

    <LinearLayout
        android:id="@+id/linear12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_below="@id/editCategory"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/colorGrey"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_below="@id/linear12"

        android:weightSum="2">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/text_size_l" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorGrey" />

        <TextView
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/colorBlueText"
            android:textSize="@dimen/text_size_l" />
    </LinearLayout>
</RelativeLayout>
