<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRelative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_5dp"
    android:layout_marginTop="@dimen/dimen_7dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivTextVeg"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        android:src="@drawable/textveg"
        app:layout_constraintBottom_toBottomOf="@+id/chAddOns"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chAddOns"
        app:layout_constraintWidth_percent="0.04" />

    <CheckBox
        android:id="@+id/chAddOns"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:button="@drawable/checkbox_addons"
        android:paddingLeft="@dimen/dimen_5dp"
        android:paddingEnd="@dimen/dimen_15dp"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/ivTextVeg"
        app:layout_constraintRight_toLeftOf="@+id/txtPrize"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="mmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm" />

    <TextView
        android:id="@+id/txtPrize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ss5$" />


</androidx.constraintlayout.widget.ConstraintLayout>
