<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainRelative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_7dp"
    android:layout_marginLeft="@dimen/dimen_5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivTextVeg"
        app:layout_constraintTop_toTopOf="@+id/chAddOns"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.04"
        android:src="@drawable/textveg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAddons"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivTextVeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_5dp"
        android:textColor="@color/colorDarkGrey"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_xxxxm" />

</androidx.constraintlayout.widget.ConstraintLayout>
