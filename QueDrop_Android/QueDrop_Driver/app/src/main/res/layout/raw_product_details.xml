<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_submedium"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/montserratbold"
        android:text="Yohana Yusuf"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_xxxm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProductDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/border_2dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="250 Hardfort Avenue, MA 2019"
        android:textSize="@dimen/text_size_m"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@+id/tvProductName"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName" />

    <View
        android:id="@+id/borderLeft"
        android:layout_height="0dp"
        android:layout_width="@dimen/border_05dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvProductDesc"
        android:background="@color/colorBorderGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/borderRight"
        android:layout_height="0dp"
        android:layout_width="@dimen/border_05dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvProductDesc"
        android:background="@color/colorBorderGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>