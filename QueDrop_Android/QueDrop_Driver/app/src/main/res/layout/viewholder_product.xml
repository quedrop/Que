<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_2dp"
    android:paddingTop="@dimen/dimen_3dp"
    android:paddingRight="@dimen/dimen_2dp"
    android:paddingBottom="@dimen/dimen_3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/childConstraintCurrent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/ivVegIconCurrent"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:src="@drawable/abc_vector_test"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tvProductNameCurrent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvProductNameCurrent"
            app:layout_constraintWidth_percent="0.04" />


        <TextView
            android:id="@+id/tvProductNameCurrent"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratsemibold"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintLeft_toRightOf="@+id/ivVegIconCurrent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPAddOnsCurrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:fontFamily="@font/montserratregular"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@color/colorGray100"
            android:textSize="@dimen/dimen_13sp"
            app:layout_constraintTop_toBottomOf="@+id/tvProductNameCurrent"
            tools:text="Testing" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>