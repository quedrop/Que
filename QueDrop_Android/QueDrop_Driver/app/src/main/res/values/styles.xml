<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_xm</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyOrderTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearanceOrder</item>
    </style>

    <style name="MyTabTextAppearanceOrder" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_xxm</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:fontFamily">@font/montserratsemibold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <style name="GradientTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Btn background-->

    <style name="QueDrop.Button.DarkBlue">
        <item name="android:background">@drawable/button_dark_blue</item>
    </style>

    <style name="QueDrop.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_42sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>

        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/montserratsemibold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
